<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Description</th>
      <th>Allday</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td></td>
      <td id='start-date' class='range'><%= date_field_tag(:datetime_ida) %><button class='go'>Go</button></td>
      <td id='end-date' class='range'><%= date_field_tag(:datetime_ida) %><button class='go'>Go</button></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.starttime %></td>
        <td><%= event.endtime %></td>
        <td><%= event.description %></td>
        <td><%= event.allday %></td>
        <td><%= event.complete %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
  <script type='text/javascript'>
    $(document).ready(() => {
      var startdate, enddate
      $('td button.go').click((e) => {
        startdate = $('td#start-date input').val();
        enddate = $('td#end-date input').val();
        window.location.href=`http://localhost:3000/events?startdate=${startdate}&enddate=${enddate}`
      });
    })
  </script>
